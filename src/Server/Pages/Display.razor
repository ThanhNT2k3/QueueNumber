@code {
    [Parameter] public int? BranchId { get; set; }

    private List<Branch>? Branches;
    private Branch? SelectedBranch;
    private List<Ticket> WaitingTickets = new();
    private List<(Ticket Ticket, global::Shared.Models.Counter Counter)> CurrentCalls = new();
    private HubConnection? hubConnection;
    private bool SoundEnabled = true;
    private List<Counter> Counters = new();
    private Dictionary<int, List<Ticket>> ServingTicketsByCounter = new();
    private Dictionary<int, List<Ticket>> WaitingTicketsByCounter = new();

    private void ToggleSound()
    {
        SoundEnabled = !SoundEnabled;
    }

    protected override async Task OnInitializedAsync()
    {
        Branches = await BranchService.GetAllBranchesAsync();
        if (BranchId.HasValue)
        {
            SelectedBranch = await BranchService.GetBranchByIdAsync(BranchId.Value);
            if (SelectedBranch != null)
            {
                Counters = await CounterService.GetCountersByBranchAsync(SelectedBranch.BranchId);
                var servingTickets = await TicketService.GetServingTicketsAsync(SelectedBranch.BranchId);
                var waitingTickets = await TicketService.GetWaitingTicketsAsync(SelectedBranch.BranchId);
                ServingTicketsByCounter = Counters.ToDictionary(c => c.CounterId, c => servingTickets.Where(t => t.AssignedCounterId == c.CounterId).ToList());
                WaitingTicketsByCounter = Counters.ToDictionary(c => c.CounterId, c => waitingTickets.Where(t => t.AssignedCounterId == c.CounterId).ToList());
            }
        }
    }

    private async Task SelectBranch(int branchId)
    {
        SelectedBranch = await BranchService.GetBranchByIdAsync(branchId);
        if (SelectedBranch != null)
        {
            await LoadData();
            await InitializeSignalR();
            // Prevent redirect loop: only navigate if not already on the correct URL
            var currentUri = Navigation.Uri;
            var targetUri = Navigation.ToAbsoluteUri($"/display/{branchId}").ToString();
            if (!string.Equals(currentUri, targetUri, StringComparison.OrdinalIgnoreCase))
            {
                Navigation.NavigateTo($"/display/{branchId}", replace: true);
            }
        }
    }

    private async Task LoadData()
    {
        if (SelectedBranch == null) return;

        WaitingTickets = await TicketService.GetWaitingTicketsAsync(SelectedBranch.BranchId);

        // Get currently serving tickets for this branch
        var servingTickets = await TicketService.GetServingTicketsAsync(SelectedBranch.BranchId);

        CurrentCalls.Clear();
        foreach (var ticket in servingTickets)
        {
            if (ticket.AssignedCounterId.HasValue)
            {
                // AssignedCounter navigation property should already be loaded, but fall back to service
                var counter = ticket.AssignedCounter ?? await CounterService.GetCounterByIdAsync(ticket.AssignedCounterId.Value);
                if (counter != null)
                {
                    CurrentCalls.Add((ticket, counter));
                }
            }
        }
    }

    private async Task InitializeSignalR()
    {
        if (SelectedBranch == null) return;

        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/hub/ticket"))
            // Enable automatic reconnect to improve resilience on transient network issues
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<Ticket>("ticketGenerated", async (ticket) =>
        {
            if (ticket.BranchId == SelectedBranch?.BranchId)
            {
                await LoadData();
                await InvokeAsync(StateHasChanged);
            }
        });

        hubConnection.On<Ticket>("ticketAssigned", async (ticket) =>
        {
            if (ticket.BranchId == SelectedBranch?.BranchId)
            {
                await LoadData();
                await InvokeAsync(StateHasChanged);
            }
        });

        hubConnection.On<Ticket>("ticketCalled", async (ticket) =>
        {
            if (ticket.BranchId == SelectedBranch?.BranchId)
            {
                await LoadData();
                await InvokeAsync(StateHasChanged);

                try
                {
                    if (SoundEnabled)
                    {
                        await JS.InvokeVoidAsync("playBeep");
                    }
                    await JS.InvokeVoidAsync("flashElement", "#callingArea");
                }
                catch (Exception jsEx)
                {
                    Logger.LogDebug(jsEx, "JS notify failed");
                }
            }
        });

        hubConnection.On<Ticket>("ticketCompleted", async (ticket) =>
        {
            if (ticket.BranchId == SelectedBranch?.BranchId)
            {
                await LoadData();
                await InvokeAsync(StateHasChanged);
            }
        });

        hubConnection.On<Ticket>("ticketSkipped", async (ticket) =>
        {
            if (ticket.BranchId == SelectedBranch?.BranchId)
            {
                await LoadData();
                await InvokeAsync(StateHasChanged);
            }
        });

        try
        {
            await hubConnection.StartAsync();
            await hubConnection.SendAsync("JoinBranchGroup", SelectedBranch.BranchId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to start SignalR hub connection for display branch {BranchId}", SelectedBranch.BranchId);
        }

        // Re-join group after automatic reconnect
        hubConnection.Reconnected += async (connectionId) =>
        {
            try
            {
                await hubConnection.SendAsync("JoinBranchGroup", SelectedBranch.BranchId);
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to re-join branch group after reconnect for branch {BranchId}", SelectedBranch.BranchId);
            }
        };
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            if (SelectedBranch != null)
            {
                await hubConnection.SendAsync("LeaveBranchGroup", SelectedBranch.BranchId);
            }
            await hubConnection.DisposeAsync();
        }
    }
}

