@page "/admin/servicetypes/new"
@page "/admin/servicetypes/{ServiceTypeId:int}"

@using global::Shared.Models
@using Server.Services
@inject IServiceTypeService ServiceTypeService
@inject NavigationManager Navigation
@inject ILogger<ServiceTypeEdit> Logger

<PageTitle>@(IsNew ? "Create Service Type" : "Edit Service Type")</PageTitle>

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>@(IsNew ? "Create New Service Type" : "Edit Service Type")</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@ServiceType" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Name *</label>
                            <InputText class="form-control" @bind-Value="ServiceType.Name" />
                            <ValidationMessage For="@(() => ServiceType.Name)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prefix *</label>
                            <InputText class="form-control" @bind-Value="ServiceType.Prefix" maxlength="10" />
                            <small class="form-text text-muted">Used in ticket number (e.g., "A" for "A001")</small>
                            <ValidationMessage For="@(() => ServiceType.Prefix)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" @bind-Value="ServiceType.Description" rows="3" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Estimated Minutes</label>
                            <InputNumber class="form-control" @bind-Value="ServiceType.EstimatedMinutes" />
                            <small class="form-text text-muted">Average time to process this service type</small>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">@(IsNew ? "Create" : "Save")</button>
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? ServiceTypeId { get; set; }

    private ServiceType ServiceType = new() { EstimatedMinutes = 10 };
    private bool IsNew => !ServiceTypeId.HasValue;

    protected override async Task OnInitializedAsync()
    {
        if (ServiceTypeId.HasValue)
        {
            ServiceType = await ServiceTypeService.GetServiceTypeByIdAsync(ServiceTypeId.Value) ?? new ServiceType();
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (IsNew)
            {
                await ServiceTypeService.CreateServiceTypeAsync(ServiceType);
            }
            else
            {
                await ServiceTypeService.UpdateServiceTypeAsync(ServiceType);
            }
            Navigation.NavigateTo("/admin/servicetypes");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving service type");
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/admin/servicetypes");
    }
}

